<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LatestEmailActivity">

    <TextView
        android:id="@+id/tv_latest_email_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From: me"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_latest_email_receiver_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_sender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="To: "/>

    <TextView
        android:id="@+id/tv_latest_email_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_sender"
        app:layout_constraintLeft_toRightOf="@+id/tv_latest_email_receiver_to"
        android:text="receiver"/>

    <TextView
        android:id="@+id/tv_latest_email_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject of the email"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_receiver"/>

    <TextView
        android:id="@+id/tv_latest_email_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_subject"
        android:text="Body of the email"/>


</androidx.constraintlayout.widget.ConstraintLayout>