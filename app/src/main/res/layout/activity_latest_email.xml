<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LatestEmailActivity">

    <TextView
        android:id="@+id/tv_latest_email_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From: me"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/tv_latest_email_receiver_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_sender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="To: "
        android:textColor="@color/black"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/tv_latest_email_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_sender"
        app:layout_constraintLeft_toRightOf="@+id/tv_latest_email_receiver_to"
        android:text="receiver"
        android:textColor="@color/black"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/tv_latest_email_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject of the email"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_receiver"
        android:textColor="@color/black"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_latest_email_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_latest_email_subject"
        android:text="Body of the email"
        android:textColor="@color/black"
        android:layout_margin="7dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>